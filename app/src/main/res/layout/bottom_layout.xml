<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="55dip"
    android:layout_alignParentBottom="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/re_xiaomeng"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_xiaomeng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/ib_xiaomeng"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:background="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_xiaomeng"/>

                <TextView
                    android:id="@+id/tv_xiaomeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appName"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp"
                    android:layout_below="@id/ib_xiaomeng"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dip" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/re_find"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_find"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/ib_find"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:background="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_discovery"/>

                <TextView
                    android:id="@+id/tv_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp"
                    android:layout_below="@id/ib_find"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dip" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/re_me"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/ib_me"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:background="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/tab_me"/>

                <TextView
                    android:id="@+id/tv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp"
                    android:layout_below="@id/ib_me"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dip" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>